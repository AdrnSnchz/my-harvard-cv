---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<main>
			<slot />
		</main>
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		padding: 0;
		font-family: system-ui, -apple-system, sans-serif;
		line-height: 1.6;
		color: #333;
	}
	main {
		max-width: 800px;
		margin: 2rem auto;
		padding: 0 1rem;
	}
	h1 {
		font-size: 2.5rem;
		margin-bottom: 0.5rem;
	}
	section {
		margin: 2rem 0;
	}
	.contact-info {
		color: #666;
		margin-bottom: 2rem;
	}
	.section-title {
		border-bottom: 2px solid #333;
		margin-bottom: 1rem;
		padding-bottom: 0.5rem;
		text-transform: uppercase;
	}
	.experience-item, .education-item {
		margin-bottom: 1.5rem;
	}
	.date {
		color: #666;
	}
</style>
